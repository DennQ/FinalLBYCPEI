<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.edu.dlsu.lbycpei.finalproj.controller.CalendarController">
    <top>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button onAction="#prevMonth" text="&lt; Previous" />
            <Label fx:id="monthLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Month Year" />
            <Button onAction="#nextMonth" text="Next &gt;" />
            <Button onAction="#goToToday" style="-fx-background-color: pink; -fx-text-fill: white;" text="Today" />
        </HBox>
    </top>
    <center>
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <GridPane fx:id="calendarGrid" prefHeight="400.0" prefWidth="600.0" style="-fx-border-color: gray;">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </GridPane>

            <VBox fx:id="taskDetailsPanel" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>

                <Label fx:id="selectedDateLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Select a date" />

                <Separator />

                <ScrollPane fx:id="taskScrollPane" fitToWidth="true" prefHeight="300.0" style="-fx-background: transparent;">
                    <VBox fx:id="taskListContainer" spacing="10.0" />
                </ScrollPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>
